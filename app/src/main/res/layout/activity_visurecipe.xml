<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name of recipe"
        android:id="@+id/nameRecipe"
        android:layout_gravity="center"
        android:textColor="#474766"
        android:textSize="40sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/buttonEditRecipe"
        android:layout_gravity="right"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/custom_button"/>

    <LinearLayout
        android:id="@+id/horizontalLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/nameRecipe">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="List of ingredients"
            android:id="@+id/ingredientsList"
            android:textColor="#474766"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="list of instructions"
            android:id="@+id/instructionsList"
            android:textColor="#474766"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageRecipe"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true" />-->

</LinearLayout>